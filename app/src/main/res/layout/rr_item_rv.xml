<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rl_control_rr_1"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_right_str_rr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="right"
            android:text="@string/right"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_right_rr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="left"
            android:text="@string/right"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/tv_wrong_str_rr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="right"
            android:text="@string/wrong"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_wrong_rr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="left"
            android:text="@string/wrong"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_correctRate_str_rr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="right"
            android:text="@string/correct_rate"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_correctRate_rr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="left"
            android:text="@string/correct_rate"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_control_rr_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_control_rr_1"
        android:layout_centerHorizontal="true"
        android:gravity="center">


        <TextView
            android:id="@+id/rememberTime_str_rr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="right"
            android:text="@string/rememberTime"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/rememberTime_rr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="left"
            android:text="@string/rememberTime"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dictationTime_str_rr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="right"
            android:text="@string/dictationTime"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dictationTime_rr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="left"
            android:text="@string/dictationTime"
            android:textSize="15sp" />

        <Button
            android:id="@+id/deleteRecord"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="4"
            android:textSize="13sp"
            android:text="@string/deleteRecord" />

        <TextView
            android:id="@+id/totalTime_rr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/totalTime"
            android:textSize="15sp"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>